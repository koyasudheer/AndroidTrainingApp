<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch_box"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/img_view"
        android:layout_toRightOf="@+id/ch_box"
        android:src="@mipmap/ic_launcher1"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tx_country"
        android:text="India"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_view"
        android:layout_toEndOf="@+id/img_view" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/tx_capital"
        android:text="Delhi"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_toRightOf="@id/tx_country"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

